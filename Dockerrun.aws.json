{
    "AWSEBDockerrunVersion": 2,
    "ContainerDefinitions": [
        {
            "name": "Client",
            "image": "maxim2andreev/docker-study-complex-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "Api Server",
            "image": "maxim2andreev/docker-study-complex-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "Worker",
            "image": "maxim2andreev/docker-study-complex-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "nginx:alpine",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["Client", "Api Server"]
        }
    ]
}